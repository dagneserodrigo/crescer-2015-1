package filmator;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.concurrent.atomic.AtomicInteger;

public class Netflox {
	private ArrayList<Filme> listaFilmes = new ArrayList<Filme>();
	private HashMap<Filme, AtomicInteger> visualizacoes = new HashMap<>();
	
	public void reproduzirFilme(Filme filme) {
		if (listaFilmes.contains(filme)) {
			visualizacoes.get(filme).incrementAndGet();
			System.out.println(visualizacoes.get(filme));
		}
	}
	
	public void gerarRelatorio() {
		
	}
}
